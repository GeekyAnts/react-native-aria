{
    "compilerOptions": {
      "module": "ESNext",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "skipLibCheck":true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "DOM"
      ]
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "example",
      "react-native"
    ]
   }